<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <Border Classes="ThinBorder">
                <Button Content="test" />
            </Border><!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Global styles for the application -->
    <Style Selector="Border.ThinBorder">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="{DynamicResource ControlStrongStrokeColorDefault}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="BoxShadow" Value="2 2 3 3 Black" />
    </Style>

    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Button On CalendarDatePicker doesn't seem to work in FluentAvalonia, reverting to default
                Calendar date picker -->
                <ResourceInclude Source="avares://Avalonia.Themes.Fluent/Controls/CalendarDatePicker.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>
</Styles>
