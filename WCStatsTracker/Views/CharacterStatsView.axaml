<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:WCStatsTracker.ViewModels"
             xmlns:controls="clr-namespace:WCStatsTracker.Controls"
             xmlns:liveChart="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="WCStatsTracker.Views.CharacterStatsView">
    <Design.DataContext>
        <viewModels:CharacterStatsViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*, *"
          ColumnDefinitions="*,*,*,*">
        <UniformGrid Rows="2"
                     Columns="1">
            <controls:StatCard DockPanel.Dock="Top"
                               Header="{Binding MostUsedCharacterCardValues.Header}"
                               LargeBody="{Binding MostUsedCharacterCardValues.LargeBody}"
                               SmallBody="{Binding MostUsedCharacterCardValues.SmallBody}"
                               IconKind="HumanQueue"
                               Margin="{StaticResource AppMargin}" />
            <controls:StatCard DockPanel.Dock="Bottom"
                               Header="{Binding FastestCharacterCardValues.Header}"
                               LargeBody="{Binding FastestCharacterCardValues.LargeBody}"
                               SmallBody="{Binding FastestCharacterCardValues.SmallBody}"
                               IconKind="HumanRunFast"
                               Margin="{StaticResource AppMargin}" />
        </UniformGrid>
        <Border Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Classes="ThinBorder"
                Margin="{StaticResource AppMargin}">
            <liveChart:CartesianChart Margin="{StaticResource AppMargin}"
                                      Series="{Binding CharacterChartSeries}"
                                      XAxes="{Binding CharacterChartXAxes}"
                                      YAxes="{Binding CharacterChartYAxes}" />
        </Border>
        <Border Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Classes="ThinBorder"
                Margin="{StaticResource AppMargin}">
            <liveChart:CartesianChart Margin="{StaticResource AppMargin}"
                                      Series="{Binding AbilityChartSeries}"
                                      XAxes="{Binding AbilityChartXAxes}"
                                      YAxes="{Binding AbilityChartYAxes}" />
        </Border>
        <UniformGrid Grid.Row="1"
                     Grid.Column="3"
                     Rows="2"
                     Columns="1">
            <controls:StatCard DockPanel.Dock="Top"
                               Header="{Binding MostUsedAbilityCardValues.Header}"
                               LargeBody="{Binding MostUsedAbilityCardValues.LargeBody}"
                               SmallBody="{Binding MostUsedAbilityCardValues.SmallBody}"
                               IconKind="MagicWand"
                               Margin="{StaticResource AppMargin}" />
            <controls:StatCard DockPanel.Dock="Bottom"
                               Header="{Binding FastestAbilityCardValues.Header}"
                               LargeBody="{Binding FastestAbilityCardValues.LargeBody}"
                               SmallBody="{Binding FastestAbilityCardValues.SmallBody}"
                               IconKind="LorryFast"
                               Margin="{StaticResource AppMargin}" />
        </UniformGrid>
    </Grid>
</UserControl>
