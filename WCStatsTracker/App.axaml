<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:WCStatsTracker"
             xmlns:themes="using:FluentAvalonia.Styling"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="WCStatsTracker.App"
             x:CompileBindings="True">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <Thickness x:Key="AppMargin">5</Thickness>
    </Application.Resources>
    <Application.Styles>
        <themes:FluentAvaloniaTheme />
        <materialIcons:MaterialIconStyles />
        <StyleInclude Source="/Styles/DataValidationErrors.axaml" />
        <StyleInclude Source="/Styles/AppStyles.axaml" />
        <StyleInclude Source="/Controls/StatCard.axaml" />
        <!--<StyleInclude Source="/Controls/ImageButton.axaml"/>-->
    </Application.Styles>
</Application>
