{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source={AppDir}WCStats.sqlite"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    },
    "Enrich": [
      "WithExceptionDetails",
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Debug"
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleThemes::Literate, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./log.json"
        }
      }
    ]
  }
}
